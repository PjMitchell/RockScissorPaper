@model RockScissorPaper.Models.GameViewModel
@{
    ViewBag.Title = "Game";
}
<link rel="stylesheet" href="/Content/Css/Game.css" type="text/css" />
 <div id="liveStatusBox">
    <p id="peoplePlayingField">People Playing :</p>
    <p id="botWins">Bots :</p>
    <p id="humanWins">Human :</p>
</div>
<div id="gameContainer">
    
    <h2 id="gameBannerMessage"> @Model.StateOfGame.BannerMessage</h2>
    <div id="playerOne" class="playerPanel">
        <h3>@Model.PlayerOne.Name</h3>
        <div class="playerImage">
        <img  src="~/Content/Images/Pm.jpg" width="80"/>
        </div>
        <p class="playerSelection" id="p1Selection">@Model.StateOfGame.PlayerOne.CurrentSelection </p>
        <h3 class="score" id="p1Score">@Model.StateOfGame.PlayerOne.CurrentScore</h3>
    </div>
    <div class="centerPanel">
            <h2>Vs</h2>
            <p id="userMessage">
                @if (@Model.StateOfGame.PlayerOne.IsViewer)
                {
                    @Html.Raw(Model.StateOfGame.PlayerOne.PlayerMessage )
                }
                else
                {
                     @Html.Raw(Model.StateOfGame.PlayerTwo.PlayerMessage )
                   
                }

            </p>
            <h3 id="GameRounds">@Model.StateOfGame.RoundMessage</h3>
    </div>
    <div id="playerTwo" class="playerPanel">
        <h3>@Model.PlayerTwo.Name</h3>
         <div class="playerImage">
        <img src="~/Content/Images/Drunk-hamster2.jpg" width="80"/>
        </div>
        <p class="playerSelection" id="p2Selection">@Model.StateOfGame.PlayerTwo.CurrentSelection </p>
        <h3 class="score" id="p2Score">@Model.StateOfGame.PlayerTwo.CurrentScore</h3>
    </div>
    <div id="playerOptions">
        @foreach(var item in Model.ButtonBox.Buttons)
        {
        <button data-selection="@item.SelectionId" data-selectionName="@item.SelectionText">@item.SelectionText</button>
        }
    </div>
</div>
    @section scripts {
    
        <!--Script references. -->
        <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
        <!--Reference the SignalR library.-->

    <script src="~/Scripts/jquery.signalR-1.1.2.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.--> 
    
    <script>
        $(function () {
            Roshambo.init(@Model.StateOfGame.GameId, @Model.CurrentUserId);
            Roshambo.liveStatus();
        });
    </script>
        }

    
    

