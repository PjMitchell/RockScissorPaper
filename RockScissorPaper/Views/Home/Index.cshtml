<div class="wrapper4">
   
@using( Html.BeginForm())
{
    <h3>Please enter your name before you start</h3>
    @Html.TextBox("username", null)
    <div id="avatarSelectionBox">
        <div class="avatar">
            <input type="radio" name="avatar" id="Paper1" checked="checked" value="Paper1.jpg" />
            <label for="Paper1">
                <img src="~/Content/Images/Avatars/Paper1.jpg" />
            </label>
        </div>
        <div class="avatar">
            <input type="radio" name="avatar" id="Rock1" checked="checked" value="Rock1.jpg" />
            <label for="Rock1">
                <img src="~/Content/Images/Avatars/Rock1.jpg" />
            </label>
        </div>
        <div class="avatar">
            <input type="radio" name="avatar" id="Scissor1" checked="checked" value="Scissor1.jpg" />
            <label for="Scissor1">
                <img src="~/Content/Images/Avatars/Scissor1.jpg" />
            </label>
        </div>
        <div class="avatar">
            <input type="radio" name="avatar" id="Paper2" hidden="hidden" value="Paper2.jpg" />
            <label for="Paper2">
                <img src="~/Content/Images/Avatars/Paper2.jpg" />
            </label>
        </div>
        <div class="avatar">
            <input type="radio" name="avatar" id="Rock2" checked="checked" value="Rock2.jpg" />
            <label for="Rock2">
                <img src="~/Content/Images/Avatars/Rock2.jpg" />
            </label>
        </div>
        <div class="avatar">
            <input type="radio" name="avatar" id="Scissor2" checked="checked" value="Scissor1.jpg" />
            <label for="Scissor2">
                <img src="~/Content/Images/Avatars/Scissor2.jpg" />
            </label>
        </div>
        <div class="clear-fix"></div>
    </div>
    
   <input type="submit" value="Start Game" />
}
</div>

